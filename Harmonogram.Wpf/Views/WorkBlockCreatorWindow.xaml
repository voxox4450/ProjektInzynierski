<hc:Window
    x:Class="Harmonogram.Wpf.Views.WorkBlockCreatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Harmonogram.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WorkBlockCreatorWindow"
    Width="400"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Godzina rozpoczęcia:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding WorkStart}" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Godzina zakończenia:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding WorkEnd}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Pracownik:" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            DisplayMemberPath="Name"
            ItemsSource="{Binding CheckedUsers}"
            SelectedItem="{Binding SelectedUser}" />
        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Command="{Binding SaveCommand}" />
    </Grid>
</hc:Window>
