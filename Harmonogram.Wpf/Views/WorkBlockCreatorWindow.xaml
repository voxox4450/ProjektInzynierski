<Window x:Class="Harmonogram.Wpf.Views.WorkBlockCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harmonogram.Wpf.Views"
        mc:Ignorable="d"
        Title="WorkBlockCreatorWindow" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Godzina rozpoczęcia:" />
        <TextBox Grid.Row="0" Text="{Binding WorkStart}" Grid.Column="1" />
        <Label Grid.Row="1" Grid.Column="0" Content="Godzina zakończenia:" />
        <TextBox Grid.Row="1" Text="{Binding WorkEnd}" Grid.Column="1" />
        <Label Grid.Row="2" Grid.Column="0" Content="Pracownik:" />
        <ComboBox Grid.Row="2" Grid.Column="1"
          ItemsSource="{Binding CheckedUsers}"
          DisplayMemberPath="Name"
            SelectedItem="{Binding SelectedUser}" />
        <Button Command="{Binding SaveCommand}" Grid.Row="3" Grid.ColumnSpan="2" />
    </Grid>
</Window>