    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ItemsControl
                Grid.Column="0"
                Margin="0,60,0,0"
                ItemsSource="{Binding WorkHours}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Height="40"
                            FontSize="15"
                            Text="{Binding}"
                            TextAlignment="Center" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--#region Poniedziałek-->
            <Border Grid.Column="1" Background="White">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            Command="{Binding OpenWorkBlockCreatorCommand}"
                            CommandParameter="Poniedziałek"
                            Header="Dodaj blok pracy" />
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel>
                    <TextBlock
                        FontSize="20"
                        Text="Poniedziałek"
                        TextAlignment="Center" />
                    <TextBlock
                        FontSize="15"
                        Text="{Binding DayDates[0], StringFormat='{}{0:dd.MM}'}"
                        TextAlignment="Center" />
                    <ItemsControl ItemsSource="{Binding WorkBlockViewModels[Poniedziałek]}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="White" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Rectangle
                                        Width="{Binding Width}"
                                        Height="{Binding Height}"
                                        Fill="Blue"
                                        Opacity="0.2" />
                                    <TextBlock
                                        Width="{Binding Width}"
                                        Height="{Binding Height}"
                                        Foreground="White"
                                        Text="{Binding Name}"
                                        TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="{x:Type ContentPresenter}">
                                <Setter Property="Canvas.Top" Value="{Binding Top}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </StackPanel>
            </Border>
            <!--#endregion-->
