<UserControl x:Class="Harmonogram.Wpf.Views.ScheduleCreatorUserControls.UserControl1Date"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Harmonogram.Wpf.Views.ScheduleCreatorUserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="2" FontSize="20" Height="40" VerticalContentAlignment="Center" Content="Wybierz datę harmonogramu:" />
        <Label Grid.Row="1" Content="Data rozpoczęcia:" Width="150" />
        <DatePicker SelectedDate="{Binding StartingDate}" Grid.Row="1" Grid.Column="1" Height="50" Width="150" />
        <Label Grid.Row="2" Content="Data zakończenia:"  Width="150" />
        <DatePicker SelectedDate="{Binding StartingDate}" Grid.Row="2" Grid.Column="1" Height="50" Width="150" />
    </Grid>
</UserControl>